<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	 <TargetFrameworks>net8.0;net4.6.1</TargetFrameworks>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>SharedDriveConnection</PackageId>
    <Title>Shared Drive Connection</Title>
    <Authors>Sebastian Van Rooyen</Authors>
    <Description>Estalishes a connection to a shared network drive that requires credentials.</Description>
    <Copyright></Copyright>
    <PackageProjectUrl>https://github.com/SebastianDevelops/SharedDriveConnection</PackageProjectUrl>
    <PackageReadmeFile>readMe.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/SebastianDevelops/SharedDriveConnection</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>shared-drive;c#;network-folder;shared;network</PackageTags>
    <PackageReleaseNotes>Initial Deployment</PackageReleaseNotes>
    <Company />
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\readMe.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
